

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.25"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="1"
        android:background="#333">

        <WebView
            android:id="@+id/wv"
            android:layout_width="1dp"
            android:layout_height="1dp">

        </WebView>

        <EditText
            android:id="@+id/txtMainDisplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:gravity="center_vertical|right"
            android:textSize="50sp"
            android:layout_gravity="center_vertical"
            android:paddingRight="8dp"
            android:background="#ffaac1ae"
            android:singleLine="true"
            android:layout_margin="2dp"
            android:inputType="text"
            android:focusableInTouchMode="false"/>
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="16"
        android:orientation="vertical"
        android:id="@+id/Buttoner">


        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="horizontal"
            android:baselineAligned="false">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2.5"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <Button
                    android:id="@+id/btnAdd"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:text="Add M"
                    android:textSize="16sp"
                    android:layout_marginTop="2dp"
                    android:onClick="addMem"
                    android:background="#ff1e0978"
                    android:textColor="#fff9f7d4"
                    android:layout_marginBottom="4dp"
                    android:layout_marginLeft="4dp"/>
                <Button
                    android:id="@+id/btnAddRow"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Add Row"
                    android:textSize="14sp"
                    android:onClick="onAddRow"
                    android:background="#ffd6d7d7"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="6dp"
                    android:visibility="gone"
                    />
                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="Edit"
                    android:textSize="14sp"
                    android:onClick="onEditBtn"
                    android:background="#ffd6d7d7"
                    android:layout_marginLeft="4dp"
                    android:layout_marginBottom="6dp"/>


                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <LinearLayout
                        android:id="@+id/memLL"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="4dp">


                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/tlll"
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp"
                >


            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="6"
            android:orientation="horizontal"
            >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:paddingTop="0dp"
                android:paddingLeft="4dp"
                android:paddingBottom="4dp"
                android:paddingRight="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:id="@+id/b7"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="7"
                        android:textSize="32sp"
                        android:onClick="onNumClick"
                        android:background="#ff1c0777"
                        android:textColor="#fff9f7d4"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"/>
                    <Button
                        android:id="@+id/b8"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="8"
                        android:textSize="32sp"
                        android:onClick="onNumClick"
                        android:background="#ff1c0777"
                        android:textColor="#fff9f7d4"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"/>
                    <Button
                        android:id="@+id/b9"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="9"
                        android:textSize="32sp"
                        android:onClick="onNumClick"
                        android:background="#ff1c0777"
                        android:textColor="#fff9f7d4"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"/>


                </LinearLayout>
                -
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:id="@+id/b4"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="4"
                        android:textSize="32sp"
                        android:onClick="onNumClick"
                        android:background="#ff1c0777"
                        android:textColor="#fff9f7d4"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"/>
                    <Button
                        android:id="@+id/b5"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="5"
                        android:textSize="32sp"
                        android:onClick="onNumClick"
                        android:background="#ff1c0777"
                        android:textColor="#fff9f7d4"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"/>
                    <Button
                        android:id="@+id/b6"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="6"
                        android:textSize="32sp"
                        android:onClick="onNumClick"
                        android:background="#ff1c0777"
                        android:textColor="#fff9f7d4"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:id="@+id/b1"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="1"
                        android:textSize="32sp"
                        android:onClick="onNumClick"
                        android:background="#ff1c0777"
                        android:textColor="#fff9f7d4"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"/>
                    <Button
                        android:id="@+id/b2"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="2"
                        android:textSize="32sp"
                        android:onClick="onNumClick"
                        android:background="#ff1c0777"
                        android:textColor="#fff9f7d4"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"/>
                    <Button
                        android:id="@+id/b3"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="3"
                        android:textSize="32sp"
                        android:onClick="onNumClick"
                        android:background="#ff1c0777"
                        android:textColor="#fff9f7d4"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    >
                    <Button
                        android:id="@+id/b0"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:text="0"
                        android:textSize="32sp"
                        android:onClick="onNumClick"
                        android:background="#ff1c0777"
                        android:textColor="#fff9f7d4"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"/>
                    <Button
                        android:id="@+id/bDec"
                        android:layout_height="match_parent"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="."
                        android:textSize="32sp"
                        android:onClick="onNumClick"
                        android:background="#ff1c0777"
                        android:textColor="#fff9f7d4"
                        android:layout_marginLeft="1dp"
                        android:layout_marginTop="1dp"/>


                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:paddingRight="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="1dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >


                    <Button
                        android:id="@+id/bDiv"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="/"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:onClick="onOpsClick"
                        android:background="#ffb4bec8"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"/>
                    <Button
                        android:id="@+id/bTimes"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="*"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:onClick="onOpsClick"
                        android:background="#ffb4bec8"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"/>
                    <Button
                        android:id="@+id/bMinus"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="-"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:onClick="onOpsClick"
                        android:background="#ffb4bec8"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"/>
                    <Button
                        android:id="@+id/bPlus"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="+"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:onClick="onOpsClick"
                        android:background="#ffb4bec8"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"/>


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >

                    <Button
                        android:id="@+id/bC"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="C"
                        android:textSize="32sp"
                        android:gravity="center"
                        android:onClick="onOpsClick"
                        android:background="#ffc8654c"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"/>
                    <Button
                        android:id="@+id/bback"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Del"
                        android:textSize="26sp"
                        android:gravity="center"
                        android:onClick="onOpsClick"
                        android:background="#ffb4bec8"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"/>

                    <Button
                        android:id="@+id/bEnter"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="Enter"
                        android:textSize="24sp"
                        android:gravity="center"
                        android:onClick="onOpsClick"
                        android:background="#ffb4bec8"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"/>
                    <Button
                        android:id="@+id/bEqu"
                        android:layout_height="0dp"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:text="="
                        android:textSize="32sp"
                        android:gravity="center"
                        android:onClick="onOpsClick"
                        android:background="#ffb4bec8"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="2dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>